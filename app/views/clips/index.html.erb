<div class="page-header">
	<p id="notice"><%= notice %></p>

	<h1>Welcome to Clipshare</h1>
	<h2>By <%= link_to "Adam O'Neill", "https://github.com/adon94/clipshare", :target => "_blank" %></h2>
</div>

<% @clips.order("created_at desc").each do |clip| %>
  <div class="clip row clearfix">
    <h2>
      <%= link_to clip.title, clip %><br>
		<small class="author">Submitted <%= time_ago_in_words(clip.created_at) %> ago by <%= link_to clip.user.name, clip.user %></small>
		<h2><small>Category: <%= link_to clip.category.name, clip.category %></small></hh2>
		<br>
		<div class="btn-group">
		<%= link_to like_clip_path(clip), method: :put, class: "btn btn-default btn-sm" do %>
			<span class="glyphicon glyphicon-chevron-up"></span>
			Likes:
			<%= clip.get_upvotes.size %>
		<% end %>
		<%= link_to dislike_clip_path(clip), method: :put, class: "btn btn-default btn-sm" do %>
			<span class="glyphicon glyphicon-chevron-down"></span>
			Dislikes:
			<%= clip.get_downvotes.size %>
		<% end %>
	<h2 class="comments_title">
	<small><%= clip.comments.count %> Comments</small>
	</h2>
	</div>
	</div>
<% end %>